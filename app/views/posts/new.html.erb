<h1>New Post</h1>
<% if @current_user %>
<%= form_with :model => @post do |form| %>
  <%= form.hidden_field "place_id" %>
  <div class="mb-3">
    <%= form.label "title"%>
    <%= form.text_field "title" %>
  </div>
  <p>
    <%= form.label "description" %>
    <%= form.text_field "description"  %>
  </p>
  <p>
    <%= form.label "posted_on" %>
    <%= form.date_field "posted_on" %>
  </p>
  <div class="mb-3">
  <%= form.label "uploaded_image" %>
   <%= form.file_field "uploaded_image", :accept => "image/png,image/jpg,image/jpeg,image/gif", :class => "form-control" %>
</div>
  <p>
    <%= form.submit %>
  </p>
<% end %>
<%else%>
   You should <a href="/login">login</a> first.
<%end%>